<main>
<h1>Books</h1>
 	<table width="1200">
 	<thead>
	<tr>
	  <th class="heading">Title</th>
	  <th class="heading">Body</th>
	  <th></th>
      </tr>
     </thead>
      <tbody>
	  <% @books.each do |book| %>
       <tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
	     <td><span class="botton"><%=link_to "Show",book_path(book.id) %></span>
		   <span class="botton"><%=link_to "Edit", edit_book_path(book) %></span>
		   <span class="botton"><%= link_to "Destroy", book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></span>
		 </td>
		</tr>
	   <% end %>
	   <tbody>
     </table>
    </tbody>

<%= form_for(@book) do |f| %>

<h2>New Book</h2>
    <div class="contents-box">
	<h4>Title</h4>
	<%= f.text_field :title %></div>

    <div class="contents-box">
	<h4>Body</h4>
	<%= f.text_area :body %></div>
	<div class="contents-box"><%= f.submit 'Create Book' %></div>
<% end %>
</tbody>

<% if @book.errors.any? %>
  <div class="alert">
      <% @book.errors.full_messages.each do |message| %>
        <span><%= message %></span>
      <% end %>
  </div>
<% end %>
